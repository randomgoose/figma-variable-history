{
  "extends": "@create-figma-plugin/tsconfig",
  "compilerOptions": {
    "paths": {
      "react": [
        "./node_modules/preact/compat"
      ],
      "react-dom": [
        "./node_modules/preact/compat"
      ]
    },
    "lib": [
      "ES2021"
    ],
    "skipLibCheck": true,
    "target": "ES2015",
    "typeRoots": [
      "node_modules/@figma",
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}